{
  "name": "vivaldi-tt",
  "version": "1.0.0",
  "description": "Tree-style tab manager for Vivaldi browser",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "mkdir -p .vitest-tmp && TMPDIR=.vitest-tmp TMP=.vitest-tmp TEMP=.vitest-tmp vitest",
    "test:ui": "mkdir -p .vitest-tmp && TMPDIR=.vitest-tmp TMP=.vitest-tmp TEMP=.vitest-tmp vitest --ui",
    "test:run": "mkdir -p .vitest-tmp && TMPDIR=.vitest-tmp TMP=.vitest-tmp TEMP=.vitest-tmp vitest run",
    "test:e2e": "mkdir -p .playwright-tmp && TMPDIR=.playwright-tmp TMP=.playwright-tmp TEMP=.playwright-tmp playwright test",
    "test:e2e:ui": "mkdir -p .playwright-tmp && TMPDIR=.playwright-tmp TMP=.playwright-tmp TEMP=.playwright-tmp playwright test --ui",
    "test:e2e:debug": "mkdir -p .playwright-tmp && TMPDIR=.playwright-tmp TMP=.playwright-tmp TEMP=.playwright-tmp HEADED=true playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm test && npm run test:e2e"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.33",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.38",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.5.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
